<theme>
<formatVersion>4</formatVersion>


<view name="system">

	<image name="art" extra="true">
		<size>1 1</size>
		<pos>0 0</pos>
		<origin>0 0</origin>
	</image> 	

	<image name="logo">
		<path>./../assets/logos/$system.png</path>
	</image>
	
	   <image name="background" extra="true" region="Português">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../assets/overlay2-pt.png</path>
         <zIndex>41</zIndex>
      </image>
	  
	        <image name="background" extra="true" region="English">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../assets/overlay2-en.png</path>
         <zIndex>41</zIndex>
      </image>
	  
	        <image name="background" extra="true" region="Français">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../assets/overlay2-fr.png</path>
         <zIndex>41</zIndex>
      </image>
	  
	        <image name="background" extra="true" region="Español">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../assets/overlay2-es.png</path>
         <zIndex>41</zIndex>
      </image>

	<carousel name="systemcarousel">
		<type>vertical</type>
		<pos>0 0</pos>
		<size>1 1</size>
		<origin>0 0</origin>
		<color>00000000</color>
		<logoScale>1.3</logoScale>
		<logoSize>0.2 0.2</logoSize>
		<logoAlignment>right</logoAlignment>
		<maxLogoCount>5</maxLogoCount>
	</carousel>

	<text name="systemInfo">
		<pos>0.086 0.082</pos>
         <alignment>left</alignment>
         <fontPath>./../_inc/fonts/SF Slapstick Comic Bold.ttf</fontPath>
	     <fontSize>0.035</fontSize>
	     <color>ade7ef</color>
    </text>

	  <text name="info1, info2" extra="true">
	     <pos>0 0</pos>
	     <fontSize>0</fontSize>     
		 <zIndex>0</zIndex>        
      </text>
	
	<helpsystem name="help">
		<fontPath>./../_inc/fonts/SF Slapstick Comic Bold.ttf</fontPath>
		<fontSize>0.028</fontSize>
		<pos>0.05 0.94</pos>
	</helpsystem>
  
</view>

</theme>