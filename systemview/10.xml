<theme>
  <formatVersion>4</formatVersion>
  <feature supported="carousel">
  <view name="system">
    <carousel name="systemcarousel">
      <type>horizontal</type>
      <pos>0 0.250</pos>
      <size>1 1</size>
      <color>ffffff00</color>
      <logoScale>2</logoScale>
      <logoSize>0.15 0.093</logoSize>
      <maxLogoCount>3</maxLogoCount>
    </carousel>
    
   <text name="systemInfo">
    <pos>0.086 0.082</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>ade7ef</color>
     <alignment>left</alignment>
         <fontPath>./../_inc/fonts/SF Slapstick Comic Bold.ttf</fontPath>
   <fontSize>0.03</fontSize>
      </text>

<image name="art" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         </image>    
    
  <image name="logo">
    <path>./../assets/logos/$system.png</path>
  </image>
    
     <image name="background" extra="true" region="Português">
         <origin>0 0</origin>
