<theme>
<formatVersion>4</formatVersion>


<view name="system">
      <carousel name="systemcarousel">
        <type>horizontal</type>
        <pos>0 0.150</pos>
        <size>1 1</size>
        <logoScale>1</logoScale>
        <logoSize>0.243 0.243</logoSize>
        <color>00000000</color>
        <maxLogoCount>3</maxLogoCount>
        <zIndex>45</zIndex>
        <defaultTransition>instant</defaultTransition>
      </carousel>

      <image name="art" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
       </image>	  
	  
	<image name="logo">
		<path>./../assets/logos/$system.png</path>
	</image>
	  
      <image name="background" extra="true" region="Português">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../assets/bbb-pt.png</path>
         <zIndex>41</zIndex>
      </image>
    
          <image name="background" extra="true" region="English">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../assets/bbb-en.png</path>
         <zIndex>41</zIndex>
      </image>
    
          <image name="background" extra="true" region="Français">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../assets/bbb-fr.png</path>
         <zIndex>41</zIndex>
      </image>
    
          <image name="background" extra="true" region="Español">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../assets/bbb-es.png</path>
         <zIndex>41</zIndex>
      </image>
	  
      <text name="systemInfo">
		<pos>0.086 0.082</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>ade7ef</color>
		 <alignment>left</alignment>
         <fontPath>./../_inc/fonts/SF Slapstick Comic Bold.ttf</fontPath>
	 <fontSize>0.03</fontSize>
      </text>

	   <text name="info1, info2" extra="true">
	     <pos>0 0</pos>
	     <fontSize>0</fontSize>     
		 <zIndex>0</zIndex>        
      </text>
	  
      <helpsystem name="help">
        <textColor>777777</textColor>
        <iconColor>77777750</iconColor>
        <pos>0.04 0.936</pos>
        <fontPath>./../_inc/fonts/SF Slapstick Comic Bold.ttf</fontPath>
        <fontSize>0.023</fontSize>
      </helpsystem>	 
</view>

</theme>